    <!-- Fieldset: Course Details -->
    <fieldset name="product-details">
        <field name="course_start_datetime" sortOrder="150">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="component" xsi:type="string">Magenest_CourseProduct/js/form/element/custom-date</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string">Course Start Datetime</item>
                    <item name="dataScope" xsi:type="string">course_start_datetime</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                        <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                        <item name="inputFormat" xsi:type="string">yyyy-MM-dd HH:mm:ss</item>
                    </item>
                    <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                </item>
            </argument>
        </field>

        <field name="course_end_datetime" sortOrder="160">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="component" xsi:type="string">Magenest_CourseProduct/js/form/element/custom-date</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string">Course End Datetime</item>
                    <item name="dataScope" xsi:type="string">course_end_datetime</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                        <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                        <item name="inputFormat" xsi:type="string">yyyy-MM-dd HH:mm:ss</item>
                    </item>
                    <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                </item>
            </argument>
        </field>
    </fieldset>

