<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceBlock name="product_form">
            <block class="Magento\Backend\Block\Widget\Tab" name="magenest_access_time_tab">
                <arguments>
                    <argument name="data" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Access Time per Group</item>
                        <item name="sort_order" xsi:type="number">50</item>
                    </argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Form" name="magenest_access_time_form">
                    <arguments>
                        <argument name="data" xsi:type="array">
                            <item name="js_config" xsi:type="array">
                                <item name="component" xsi:type="string">Magenest_AccessTime/js/product/access-time</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
