<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">magenest_movie_form.magenest_movie_form_data_source</item>
        </item>
    </argument>

    <dataSource name="magenest_movie_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Ui\DataProvider\ModifierPoolDataProvider</argument>
            <argument name="name" xsi:type="string">magenest_movie_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">movie_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="collection" xsi:type="object">Magenest\Movie\Model\ResourceModel\Movie\Collection</argument>
        </argument>
    </dataSource>

    <fieldset name="general">
        <!-- movie_id (hidden or readonly) -->
        <field name="movie_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string">Movie ID</item>
                    <item name="dataScope" xsi:type="string">movie_id</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>

        <!-- name -->
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string">Movie Name</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <!-- description -->
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="label" xsi:type="string">Description</item>
                    <item name="dataScope" xsi:type="string">description</item>
                </item>
            </argument>
        </field>

        <!-- rating -->
        <field name="rating">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string">Rating</item>
                    <item name="dataScope" xsi:type="string">rating</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <!-- director_id (select) -->
        <field name="director_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string">Director</item>
                    <item name="dataScope" xsi:type="string">director_id</item>
                    <item name="options" xsi:type="array">
                        <!-- Dữ liệu sẽ được load qua source model hoặc UI component -->
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
