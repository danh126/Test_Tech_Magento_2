<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">magenest_movie_listing.magenest_movie_listing_data_source</item>
            <item name="deps" xsi:type="string">magenest_movie_listing.magenest_movie_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">magenest_movie_columns</item>
    </argument>
    <dataSource name="magenest_movie_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\Movie\Ui\DataProvider\Director\ListingDataProvider</argument>
            <argument name="name" xsi:type="string">magenest_movie_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">movie_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
    </dataSource>
    <columns name="magenest_movie_columns">
        <column name="movie_id">
            <settings>
                <filter>text</filter>
                <label>ID</label>
                <sortable>true</sortable>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label>Name</label>
                <sortable>true</sortable>
            </settings>
        </column>
        <column name="description">
            <settings>
                <filter>text</filter>
                <label>Description</label>
                <sortable>true</sortable>
            </settings>
        </column>
        <column name="rating">
            <settings>
                <filter>text</filter>
                <label>Rating</label>
                <sortable>true</sortable>
            </settings>
        </column>
        <actionsColumn name="actions" class="Magenest\Movie\Ui\Component\Listing\Column\MovieActions">
            <settings>
                <indexField>movie_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
