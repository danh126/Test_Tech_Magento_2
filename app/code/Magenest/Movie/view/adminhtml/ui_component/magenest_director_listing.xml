<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">magenest_director_listing.magenest_director_listing_data_source</item>
            <item name="deps" xsi:type="string">magenest_director_listing.magenest_director_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">magenest_director_listing_columns</item>
    </argument>

    <dataSource name="magenest_director_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\Movie\Model\Director\DataProvider</argument>
            <argument name="name" xsi:type="string">magenest_director_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">director_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
    </dataSource>

    <columns name="magenest_director_listing_columns">
        <column name="director_id">
            <settings>
                <filter>text</filter>
                <label>ID</label>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label>Director Name</label>
            </settings>
        </column>
    </columns>
</listing>
