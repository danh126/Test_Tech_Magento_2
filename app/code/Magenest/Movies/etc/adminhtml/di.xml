<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Table Movies -->
    <virtualType name="Magenest\Movies\Ui\DataProvider\Movie\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">magenest_movie</argument>
            <argument name="resourceModel" xsi:type="string">Magenest\Movies\Model\ResourceModel\Movie</argument>
        </arguments>
    </virtualType>

    <!-- Table Director -->
    <virtualType name="Magenest\Movies\Ui\DataProvider\Director\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">magenest_director</argument>
            <argument name="resourceModel" xsi:type="string">Magenest\Movies\Model\ResourceModel\Director</argument>
        </arguments>
    </virtualType>

    <!-- Table Actor -->
    <virtualType name="Magenest\Movies\Ui\DataProvider\Actor\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">magenest_actor</argument>
            <argument name="resourceModel" xsi:type="string">Magenest\Movies\Model\ResourceModel\Actor</argument>
        </arguments>
    </virtualType>

    <!-- Register Collection with Magento UI Component system -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="magenest_movie_listing_data_source" xsi:type="string">Magenest\Movies\Ui\DataProvider\Movie\Collection</item>
                <item name="magenest_director_listing_data_source" xsi:type="string">Magenest\Movies\Ui\DataProvider\Director\Collection</item>
                <item name="magenest_actor_listing_data_source" xsi:type="string">Magenest\Movies\Ui\DataProvider\Actor\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
